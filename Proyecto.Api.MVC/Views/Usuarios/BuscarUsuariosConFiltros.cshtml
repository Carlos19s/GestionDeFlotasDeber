@model IEnumerable<GestionDeFlotas.Modelos.Usuario>

@{
    ViewData["Title"] = "Buscar Usuarios";
}

<h1>Buscar Usuarios</h1>

<!-- Formulario de búsqueda con filtros -->
<form method="get" action="@Url.Action("BuscarUsuariosConFiltros")">
    <div class="form-group">
        <label for="searchTerm">Buscar por Usuario:</label>
        <input type="text" id="searchTerm" name="searchTerm" placeholder="Buscar por Usuario" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<h3>Resultados de la búsqueda</h3>

<!-- Tabla para mostrar los usuarios filtrados -->
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.User)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Password)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.User)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No se encontraron usuarios con los filtros seleccionados.
    </div>
}
