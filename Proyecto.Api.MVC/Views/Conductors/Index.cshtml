@model IEnumerable<GestionDeFlotas.Modelos.Conductor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<!-- Formulario de búsqueda con filtros -->
<form method="get" action="@Url.Action("BuscarConductoresConFiltros")">
    <div class="form-group">
        <label for="searchTerm">Buscar por Nombre:</label>
        <input type="text" id="searchTerm" name="searchTerm" placeholder="Buscar por Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Placa">Buscar por Nombre:</label>
        <input type="text" id="Licencia" name="Licencia" placeholder="Buscar por Licencia" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Licencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Licencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
