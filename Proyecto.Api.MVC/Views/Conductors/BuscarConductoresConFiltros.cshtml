@model IEnumerable<GestionDeFlotas.Modelos.Conductor>

@{
    ViewData["Title"] = "Buscar Conductores";
}

<h1>Buscar Conductores</h1>

<!-- Formulario de búsqueda con filtros -->
<form method="get" action="@Url.Action("BuscarConductoresConFiltros")">
    <div class="form-group">
        <label for="searchTerm">Buscar por Nombre:</label>
        <input type="text" id="searchTerm" name="searchTerm" placeholder="Buscar por Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Licencia">Buscar por Licencia:</label>
        <input type="text" id="Licencia" name="Licencia" placeholder="Buscar por Licencia" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<h3>Resultados de la búsqueda</h3>

<!-- Tabla para mostrar los conductores filtrados -->
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Licencia)</th>
            <th>@Html.DisplayNameFor(model => model.date)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Licencia)</td>
                <td>@Html.DisplayFor(modelItem => item.date)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No se encontraron conductores con los filtros seleccionados.
    </div>
}
