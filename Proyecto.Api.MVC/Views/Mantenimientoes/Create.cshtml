@model GestionDeFlotas.Modelos.Mantenimiento

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Mantenimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoMantenimiento" class="control-label"></label>
                <input asp-for="tipoMantenimiento" class="form-control" />
                <span asp-validation-for="tipoMantenimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="TallerId">Taller</label>
                <select class="form-control" id="TallerId" name="TallerId" required>
                    <option value="">Seleccione un Taller</option>
                    @foreach (var taller in ViewBag.Talleres as List<SelectListItem>)
                    {
                        <option value="@taller.Value">@taller.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="CamionId">Camión Asignado</label>
                <select class="form-control" id="CamionId" name="CamionId" required>
                    <option value="">Seleccione un Camión</option>
                    @foreach (var camion in ViewBag.Camiones as List<SelectListItem>)
                    {
                        <option value="@camion.Value">@camion.Text</option>
                    }
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pendiente" /> @Html.DisplayNameFor(model => model.Pendiente)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

