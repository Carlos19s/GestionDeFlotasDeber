@model IEnumerable<GestionDeFlotas.Modelos.Camion>

@{
    ViewData["Title"] = "Buscar Camiones";
}

<h1>Buscar Camiones</h1>

<!-- Formulario de búsqueda con filtros -->
<form method="get" action="@Url.Action("BuscarCamionesConFiltros")">
    <div class="form-group">
        <label for="searchTerm">Buscar por Marca:</label>
        <input type="text" id="searchTerm" name="searchTerm" placeholder="Buscar por Marca" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Placa">Buscar por Placa:</label>
        <input type="text" id="Placa" name="Placa" placeholder="Buscar por Placa" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<h3>Resultados de la búsqueda</h3>

<!-- Tabla para mostrar los camiones filtrados -->
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Marca)</th>
            <th>@Html.DisplayNameFor(model => model.Modelo)</th>
            <th>@Html.DisplayNameFor(model => model.Anio)</th>
            <th>@Html.DisplayNameFor(model => model.Placa)</th>
            <th>@Html.DisplayNameFor(model => model.KilometrajeActual)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.ConductorId)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
                <td>@Html.DisplayFor(modelItem => item.Anio)</td>
                <td>@Html.DisplayFor(modelItem => item.Placa)</td>
                <td>@Html.DisplayFor(modelItem => item.KilometrajeActual)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.ConductorId)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No se encontraron camiones con los filtros seleccionados.
    </div>
}
